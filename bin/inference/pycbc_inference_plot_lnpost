import argparse
import numpy
import matplotlib
matplotlib.use('agg')
from matplotlib import pyplot
from pycbc.inference import option_utils
from pycbc.io.inference_hdf import InferenceFile
from pycbc.results.scatter_histograms import scatter_histogram

parser = argparse.ArgumentParser()

parser.add_argument("--output-file", type=str, required=True,
                    help="Output plot path.")
parser.add_argument("--vmin", type=float,
                    help="Minimum value for the colorbar.")
parser.add_argument("--vmax", type=float,
                    help="Maximum value for the colorbar.")
option_utils.add_inference_results_option_group(parser)

opts = parser.parse_args()

# Get parameters
fp, parameters, labels, varargs = option_utils.results_from_cli(opts)
lnl = fp.read_lnpost(thin_start=opts.thin_start, 
                    thin_interval=opts.thin_interval, thin_end=opts.thin_end)
fp.close()

fig = scatter_histogram(parameters, varargs, lnl, labels=labels,  
                    vmin=opts.vmin, vmax=opts.vmax)

fig.savefig(opts.output_file)
pyplot.close()
