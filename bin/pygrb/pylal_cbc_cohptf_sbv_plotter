  plot_vs_snr(trigSNR[trigBestNR!=0], trigChiSquare[trigBestNR!=0], \
              injSNR[injBestNR!=0], injChiSquare[injBestNR!=0], injFile, \
              "Coherent SNR", "Chi Square", outdir, fig_tag, \
              snr_vals=snr_vals, conts=chi_conts, \
