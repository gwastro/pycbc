    plot_vs_snr(trigSNR, trigRelAmp1, injSNR, injRelAmp1, injFile, "Coherent SNR", "Relative amplitude", \
                outdir, fig_tag, xlims=[6,30], verbose=True)  

  except (OverflowError,ValueError):
