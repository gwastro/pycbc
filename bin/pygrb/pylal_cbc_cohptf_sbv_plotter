    fig_tag ="%s_%s" % (tag, "rel_amp2_vs_snr_zoom")
    plot_vs_snr(trigSNR, trigRelAmp2, injSNR, injRelAmp2, injFile, "Coherent SNR", "Relative amplitude", \
