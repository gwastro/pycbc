  # plot SNR versus SNR-traceSNR
  if not injFile:

    fig_tag = "%s_%s" % (tag, "tracediff_noinj") 
    plot_vs_snr(trigSNR, trigSNR - trigTraceSNR, injSNR,None, injFile, "Coherent SNR", "SNR - TraceSNR", \
