  fig_tag = "%s_%s" %(fig_tag, "zoom")
  plot_vs_snr(trigSNR, trigBankVeto, injSNR, injBankVeto, injFile, \
              "Coherent SNR", "Bank Veto", outdir, fig_tag, \
