  else :
    fig_tag = "%s_%s" (tag, "trace_diff_vs_snr")
    plot_vs_snr(trigSNR, trigSNR - trigTraceSNR, injSNR, injSNR - injTraceSNR, injFile, "Coherent SNR", "SNR - traceSNR", \
