  null_stat_conts.append(numpy.asarray(null_cont) - null_thresh_width)
  null_stat_conts.append(numpy.asarray(null_cont) - null_thresh_width + 1)
  plot_vs_snr(trigSNR, trigNullSNR, injSNR, injNullSNR, injFile, \
