  # Plot coherent SNR versus loudest single SNR
  fig_tag = "%s_%s" % (tag, "first_snr_vs_snr")
  plot_vs_snr(trigSNR, trigFirstSNR, injSNR, injFirstSNR, injFile, \
              "Coherent SNR", "First loudest sngl SNR", outdir, fig_tag, \
