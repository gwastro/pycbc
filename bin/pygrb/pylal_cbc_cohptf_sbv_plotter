                  injIfoSNR[ifo], injIfobankCS[ifo], injFile, \
                  "Coherent SNR", "%s sngl bank veto" % ifo, outdir, fig_tag, \
                  xlims=[4,1000], verbose=verbose)
      fig_tag = "%s_%s" %(fig_tag, "zoom")
      plot_vs_snr(trigIfoSNR[ifo], trigIfobankCS[ifo], \
                  injIfoSNR[ifo], injIfobankCS[ifo], injFile, \
                  "Coherent SNR", "%s sngl bank veto" % ifo, outdir, fig_tag, \
